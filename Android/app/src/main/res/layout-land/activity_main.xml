<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="beyond_imagination.blubblub.MainActivity">

    <!-- WebView -->

    <!-- Condition Bar -->
    <!-- Controll Alpha value for clearness -->

    <!-- Chatting Layout -->
    <beyond_imagination.blubblub.pWebView.MainWebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal">

    </beyond_imagination.blubblub.pWebView.MainWebView>

    <beyond_imagination.blubblub.pCondition.ConditionBar
        android:id="@+id/conditionbar"
        class="beyond_imagination.blubblub.pConditionBar.Condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:feed_img="@drawable/empty"
        app:light_img="@drawable/empty"
        app:quality_img="@drawable/empty"
        app:temperature_img="@drawable/empty">

    </beyond_imagination.blubblub.pCondition.ConditionBar>

    <beyond_imagination.blubblub.pChatting.ChattingLayout
        android:id="@+id/chatting"
        android:layout_width="285dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:background="#FFFFFFFF"
        android:visibility="invisible">

    </beyond_imagination.blubblub.pChatting.ChattingLayout>

    <beyond_imagination.blubblub.pCondition.ControlMessage
        android:id="@+id/controlview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="invisible">

    </beyond_imagination.blubblub.pCondition.ControlMessage>


</FrameLayout>
